{
  "extends": ["stylelint-config-standard", "stylelint-config-recommended-scss"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "declaration-no-important": true,
    "selector-max-specificity": "0,3,0",
    "selector-max-id": 0,
    "color-named": "never",
    "no-descending-specificity": null
  }
}
